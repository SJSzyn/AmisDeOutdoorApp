            </Calendar.BlackoutDates>

            <Calendar.SelectedDates>
                <sys:DateTime>1/5/2009</sys:DateTime>
                <sys:DateTime>1/12/2009</sys:DateTime>
                <sys:DateTime>1/14/2009</sys:DateTime>
                <sys:DateTime>1/13/2009</sys:DateTime>
